@model BazarStore.Product

@{
    ViewBag.Title = ViewBag.slug;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @Html.Partial("_GetProductDetailsPartial", Model)
</div>

@section Scripts {
    
    <script>
        $(function () {

            $("body").on("click", "#modal-link-open", function (e) {
                e.preventDefault();

                $("#carousel-modal").modal("show");
            });
        });
    </script>
    
}
