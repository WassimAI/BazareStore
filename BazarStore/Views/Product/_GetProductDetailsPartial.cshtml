<div class="row mb-3">
    <div class="col-lg-6 text-center">
        <h4>@Model.ProductName</h4>
        <div class="row mb-2">
            <img src="~/Images/Uploads/Products/@Model.ProductID/@Model.ImageUrl" alt="@Model.ProductName" class="border border-dark" />
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="badge badge-success">$@Model.UnitPrice</div>
            </div>
            <div class="col">
                <a href="#" class="btn btn-primary">Add To Cart</a>
            </div>
            
        </div>
    </div>
    <div class="col-lg-6 mt-lg-0 mt-md-2">
        <h4>All Variants</h4>
        <hr />

        @if(!Model.GalleryImages.Any())
        {
            <p class="lead">There are no variants for this product</p>
        }

        @foreach (var image in Model.GalleryImages)
        {
            <div style="display: inline-block;margin-right: 15px;">
                <a href="#" id="modal-link-open"><img class="border border-dark mb-sm-2" src="/Images/Uploads/Products/@Model.ProductID/Gallery/Thumbs/@image" /></a>
            </div>
        }

    </div>
</div>
