@model BazarStore.Product

@{
    int i = 0;
}
<div class="row mb-3">
    <div class="col-lg-6 text-center">
        <div class="row mb-2">
            <img src="~/Images/Uploads/Products/@Model.ProductID/@Model.ImageUrl" alt="@Model.ProductName" class="border border-dark d-block ml-2" />
        </div>
        <div class="row">
            <a href="#" class="btn btn-primary btn-sm btn-block">Add To Cart</a>
        </div>
    </div>
    <div class="col-lg-6 mt-lg-0 mt-md-2">
        <h4>All Variants</h4>
        <hr />
        <div id="carouselProductDetails" class="carousel slide" data-ride="carousel">

            <ol class="carousel-indicators">
                @for (int j = 0; j < Model.GalleryImages.Count(); j++)
                {
                    var indicatorclass = j == 0 ? "class=active" : "";

                    <li data-target="#carouselProductDetails" data-slide-to="@j" @indicatorclass></li>
                }
            </ol>
            <div class="carousel-inner">
                @foreach (var item in Model.GalleryImages)
                {
                    var itemclass = i++ == 0 ? "carousel-item active" : "carousel-item";

                    <div class="@itemclass">
                        <a href="#"><img src="~/Images/Uploads/Products/@Model.ProductID/Gallery/@item" class="d-block"></a>
                        <div class="carousel-caption d-none d-md-block">
                        </div>
                    </div>

                }
            </div>

            <a class="carousel-control-prev" href="#carouselProductDetails" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselProductDetails" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>

    </div>
</div>
