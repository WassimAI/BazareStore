<!--Modal Carousel Here-->
<div id="carousel-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.ProductName &nbsp; <span class="badge badge-primary">$@Model.UnitPrice</span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-body-custom">
                <div class="row">
                    <!--Carousel Here-->
                    <div class="col"></div>
                    <div class="col-md-10">
                        <div id="carouselProductDetails" class="carousel slide" data-ride="carousel">

                            <ol class="carousel-indicators">
                                @for (int j = 0; j < Model.GalleryImages.Count(); j++)
                                {
                                    var indicatorclass = j == 0 ? "class=active" : "";

                                    <li data-target="#carouselProductDetails" data-slide-to="@j" @indicatorclass></li>
                                }
                            </ol>
                            <div class="carousel-inner carousel-inner-custom">
                                @foreach (var item in Model.GalleryImages)
                                {
                                    var itemclass = i++ == 0 ? "carousel-item active" : "carousel-item";

                                    <div class="@itemclass">
                                        <a href="#"><img src="~/Images/Uploads/Products/@Model.ProductID/Gallery/@item" class="d-block"></a>
                                        <div class="carousel-caption d-none d-md-block">
                                        </div>
                                    </div>

                                }
                            </div>

                            <a class="carousel-control-prev" href="#carouselProductDetails" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselProductDetails" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>

                        </div>
                    </div>
                    <div class="col"></div>
                    <!--End of Carousel-->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!--Modal End-->