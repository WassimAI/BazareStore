@model IEnumerable<BazarStore.Product>

@{int count = 0; }


@if (Model.Count() == 0)
{
    <p class="lead">No items found based on search criteria</p>
}

@foreach (var item in Model)
{
    if ((count % 3) == 0)
    {
        @:<div class="row">
        }
        <div class="col-md-4 col-sm-12 mb-4 mb-lg-2">
            <div class="card text-center">
                <img src="~/Images/Uploads/Products/@item.ProductID/@item.ImageUrl" data-toggle="tooltip" data-placement="right" title="@item.ProductName" class="card-img-top" alt="@item.ProductName">
                <div class="card-body">
                    <h5 class="card-title" data-toggle="tooltip" data-placement="right" title="@item.ProductName">@item.ShortName</h5>
                    <h6>$@item.UnitPrice</h6>
                    <a href="#" data-id="@item.ProductID" class="btn btn-primary">Add To Cart</a>
                </div>
            </div>
        </div>

        if (count == 2)
        {
            count = 0;
        @:</div>
    }
    else
    {
        count++;
    }

}
